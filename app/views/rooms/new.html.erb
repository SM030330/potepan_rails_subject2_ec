<div class="edit-container">
  <nav class="nav flex-column col-2 alin-item">
    <p class= "nav-link">基本情報</p>
  </nav>  
  <div class="container">
    <div class="card new-card room-new-card">
      <div class="card-body">
        <h4 class="card-title">ルーム情報登録</h4>
        <%= form_with(model: @room, local: true) do |u| %>
          <%= render "shared/errors", object: u.object %>
          <div class="row">
            <div class="col-3">
              <label>ルーム名</label>
              <span class="badge bg-danger">必須</span>
            </div>
            <div class="col-9">
              <%= u.text_field :name, placeholder: "ルーム名を入力", class: "form-control"%> 
            </div>
          </div>
          <div class="row">
            <div class="col-3">
              <label>ルーム紹介</label>
              <span class="badge bg-danger">必須</span>
            </div>
            <div class="col-9">
              <%= u.text_field :info, placeholder: "ルーム説明を入力", class: "form-control"%> 
            </div>
          </div>
          <div class="row">
            <div class="col-3">
              <label>料金</label>
              <span class="badge bg-danger">必須</span>
            </div>
            <div class="col-9">
              <%= u.text_field :value, placeholder: "一日あたりの料金を入力", class: "form-control"%> 
            </div>
          </div>
          <div class="row">
            <div class="col-3">
              <label>住所</label>
              <span class="badge bg-danger">必須</span>
            </div>
            <div class="col-9">
              <%= u.text_field :address, placeholder: "住所を入力", class: "form-control"%> 
            </div>
          </div>
          <div class="row">
            <div class="col-3">
              <label>ルーム画像</label>
              <span class="badge bg-danger">必須</span>
            </div>
            <div class="col-9">
              <%= u.file_field :room_img %> 
            </div>
          </div>
          <%= u.submit class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>  
  </div>
</div>
